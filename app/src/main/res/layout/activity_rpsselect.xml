<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.school.harrisongary.rockpaperscissorsextreme.RPSselect">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonR"
        android:src="@drawable/rock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="rockscreen" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonP"
        android:src="@drawable/paper"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButtonR"
        android:layout_alignStart="@+id/imageButtonR"
        android:onClick="paperscreen" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonS"
        android:src="@drawable/scissors"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButtonR"
        android:layout_alignStart="@+id/imageButtonR"
        android:onClick="scissorsscreen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scissors"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ff00ad2e"
        android:layout_alignTop="@+id/imageButtonS"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paper"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ff0004ad"
        android:layout_alignTop="@+id/imageButtonP"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rock"
        android:id="@+id/textView4"
        android:textSize="40dp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ffad000c"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
