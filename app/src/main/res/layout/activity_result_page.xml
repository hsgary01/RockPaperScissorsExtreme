<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="@drawable/pbg"


    tools:context="com.school.harrisongary.rockpaperscissorsextreme.ResultPage">

    <TextView

        android:id="@+id/youPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You:"
        android:textSize="30dp"
        android:textColor="#FFFFFF" />

    <TextView

        android:id="@+id/compPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer:"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/youPlays" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/compPlays"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/button"
        android:onClick= "titleScreen"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#F0F1F1" />




    <TextView

        android:id="@+id/textResult"
        android:text ="Result"
        android:textSize="40dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerInParent="true"
        android:textColor="#E6FFFF" />






</RelativeLayout>
