<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/result_layout"
    android:background="@drawable/pbgsmall"


    tools:context="com.school.harrisongary.rockpaperscissorsextreme.ResultPage">

    <TextView

        android:id="@+id/youPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/You"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:paddingLeft="38dp"
        android:paddingRight="20dp" />

    <TextView

        android:id="@+id/compPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Computer"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:src="@drawable/paperbill"
        android:layout_below="@+id/youPlays" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView6"
        android:src="@drawable/wolverine_4"
        android:layout_below="@+id/compPlays"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/Play_Again"
        android:id="@+id/button"
        android:onClick= "titleScreen"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#F0F1F1" />




    <TextView

        android:id="@+id/textResult"
        android:text ="@string/Result"
        android:textSize="40sp"
        android:paddingBottom="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerInParent="true"
        android:textColor="#E6FFFF" />






</RelativeLayout>
