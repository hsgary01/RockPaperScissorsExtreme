<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/select_layout"
    android:background="@drawable/pbgsmall"
    tools:context="com.school.harrisongary.rockpaperscissorsextreme.RPSselect">



    <ImageButton
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageButtonR"
        android:src="@drawable/rock"
        android:layout_alignParentTop="true"

        android:background="#fff6f6f6"
        android:contentDescription="@string/SelectRock"/>

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageButtonP"
        android:src="@drawable/paper"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#fff6f6f6"
        android:contentDescription="@string/SelectPaper" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:id="@+id/imageButtonS"
        android:src="@drawable/scissors"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButtonR"
        android:layout_alignStart="@+id/imageButtonR"
        android:background="#fff6f6f6"
        android:contentDescription="@string/SelectScissors"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Scissors"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ff00ad2e"

        android:layout_alignTop="@+id/imageButtonS"
        android:layout_alignRight="@+id/imageButtonS"
        android:layout_alignEnd="@+id/imageButtonS"
        android:layout_marginRight="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Paper"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ff0004ad"

        android:layout_alignTop="@+id/imageButtonP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp" />" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Rock"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:textColorHighlight="#ff000000"
        android:textColor="#ffad000c"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButtonR"
        android:layout_alignEnd="@+id/imageButtonR"
        android:layout_marginRight="53dp" />


</RelativeLayout>
